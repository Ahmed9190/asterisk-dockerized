# Asterisk WebRTC Server Configuration
# Copy this file to .env and update with your values

# Network Configuration
# =====================
# Your public IP address (required for NAT traversal)
PUBLIC_IP=YOUR_PUBLIC_IP_HERE

# Local network (adjust for your setup)
LOCAL_NETWORK=192.168.0.0/16

# Service Configuration
# =====================
# Timezone
TZ=Africa/Kigali

# SIP Credentials
# ===============
# Change these passwords in production!
SIP_PASSWORD=SecurePass123

# TURN Server Credentials
# ========================
TURN_USERNAME=turnuser
TURN_PASSWORD=TurnPassword123

# Port Configuration
# ==================
# SIP ports
SIP_UDP_PORT=5060
SIP_TCP_PORT=5060
SIP_TLS_PORT=5061

# WebRTC ports
WSS_PORT=8089
HTTP_PORT=8088

# STUN/TURN ports
STUN_PORT=3478
TURNS_PORT=5349

# RTP port range
RTP_START=10000
RTP_END=10200

# Relay port range (Coturn)
RELAY_START=49152
RELAY_END=49200

# Resource Limits (optional)
# ===========================
ASTERISK_CPU_LIMIT=2
ASTERISK_MEM_LIMIT=2G
COTURN_CPU_LIMIT=1
COTURN_MEM_LIMIT=512M
